<div class="jsonpage-block" style="">

    {% assign image1 = block.images[0] -%}
    {% assign image2 = block.images[1] -%}
    {% assign image3 = block.images[2] -%}

    {% if block.layout == "one-two" -%}
    <div style="display: flex; align-items: center">
        <div style="flex: 1;">
            <img src="{{ image1.url }}" title="{{ image1.title }}" />
        </div>
        <div style="flex: 1; display: flex; flex-direction: column; align-items: center;">
            <div style="flex: 1;">
                <img src="{{ image2.url }}" title="{{ image2.title }}" />
            </div>
            <div style="flex: 1;">
                <img src="{{ image3.url }}" title="{{ image3.title }}" />
            </div>
        </div>
    </div>
    {% elseif block.layout == "two-one" -%}
    <div style="display: flex; align-items: center">
        <div style="flex: 1; display: flex; flex-direction: column; align-items: center;">
            <div style="flex: 1;">
                <img src="{{ image1.url }}" title="{{ image1.title }}" />
            </div>
            <div style="flex: 1;">
                <img src="{{ image2.url }}" title="{{ image2.title }}" />
            </div>
        </div>
        <div style="flex: 1;">
            <img src="{{ image3.url }}" title="{{ image3.title }}" />
        </div>
    </div>
    {% elseif block.layout == "one-one" -%}
    <div style="display: flex; align-items: center;">
        <div style="flex: 1;">
            <img src="{{ image1.url }}" title="{{ image1.title }}" />
        </div>
        <div style="flex: 1;">
            <img src="{{ image2.url }}" title="{{ image2.title }}" />
        </div>
    </div>

    {% endif %}

</div>


{% comment %}

{"id": "name","label": "Block name","type": "string","default": "Image carousel"},
{"id": "layout","label": "Layout","type": "select","default": "one-two",
        "options": [{"label": "One left, two right","value": "one-two"},{"label": "Two left, one right","value": "two-one"},{"label": "One left, one right","value": "one-one"}]},
{"id": "images","label": "Images","type": "list","addText": "Add image","removeText": "Remove image","displayField": "title",
        "element": [{"id": "title","label": "Title","type": "string"},
                    {"id": "url","label": "Upload picture","type": "image","previewWidth": 120,"previewHeight": 80}]}

{% endcomment %}
